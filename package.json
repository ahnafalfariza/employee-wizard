{
  "name": "employee-wizard",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "api:step1": "json-server --watch db-step1.json --port 4001",
